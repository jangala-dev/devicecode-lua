#!/bin/sh

# Define the UBUS event name
EVENT_NAME="hotplug.mwan3"

# Create JSON payload for UBUS event
JSON_PAYLOAD="{
    \"action\": \"$ACTION\",
    \"interface\": \"$INTERFACE\",
    \"device\": \"$DEVICE\"
}"

# Send event to UBUS
ubus send "$EVENT_NAME" "$JSON_PAYLOAD"

# Default mwan3 action
if [ "${ACTION}" = "connected" ] ; then
   /etc/init.d/sysntpd restart
fi
